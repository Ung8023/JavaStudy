<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!-- java -->
    <servlet>
        <servlet-name>ServletImplementsServlet</servlet-name>
        <servlet-class>com.ung8023.foundation.java.ServletImplementsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ServletExtendsGeneric</servlet-name>
        <servlet-class>com.ung8023.foundation.java.ServletExtendsGeneric</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ServletExtendsHttp</servlet-name>
        <servlet-class>com.ung8023.foundation.java.ServletExtendsHttp</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletImplementsServlet</servlet-name>
        <url-pattern>/a</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ServletExtendsGeneric</servlet-name>
        <url-pattern>/b</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServletExtendsHttp</servlet-name>
        <url-pattern>/c</url-pattern>
    </servlet-mapping>

    <!-- kotlin -->
    <servlet>
        <servlet-name>KtServletImplementsServlet</servlet-name>
        <servlet-class>com.ung8023.foundation.kotlin.ServletImplementsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KtServletExtendsGeneric</servlet-name>
        <servlet-class>com.ung8023.foundation.kotlin.ServletExtendsGeneric</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KtServletExtendsHttp</servlet-name>
        <servlet-class>com.ung8023.foundation.kotlin.ServletExtendsHttp</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>KtServletImplementsServlet</servlet-name>
        <url-pattern>/akt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KtServletExtendsGeneric</servlet-name>
        <url-pattern>/bkt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KtServletExtendsHttp</servlet-name>
        <url-pattern>/ckt</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ReadServletConfig</servlet-name>
        <servlet-class>com.ung8023.foundation.kotlin.ReadServletConfig</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>张三</param-value>
        </init-param>
        <init-param>
            <param-name>level</param-name>
            <param-value>15</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ReadServletConfig</servlet-name>
        <url-pattern>/readA</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServletContext</servlet-name>
        <servlet-class>com.ung8023.foundation.kotlin.UseServletContext</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserServletContext</servlet-name>
        <url-pattern>/use</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RequestAndResponseServlet</servlet-name>
        <servlet-class>com.ung8023.foundation.kotlin.RequestAndResponseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RequestAndResponseServlet</servlet-name>
        <url-pattern>/req</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CookieServlet</servlet-name>
        <servlet-class>com.ung8023.foundation.kotlin.cookie.CookieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CookieServlet</servlet-name>
        <url-pattern>/cookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CookieShopServlet</servlet-name>
        <servlet-class>com.ung8023.foundation.kotlin.cookie.CookieShopServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CookieShopServlet</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>com.ung8023.foundation.kotlin.cookie.BookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>

</web-app>